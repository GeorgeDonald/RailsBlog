<!DOCTYPE html>
<html>
  <head>
    <title>RailsBlog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <% if logged_in? %>
        <h3>Welcome, <%= @user.fullname %>!</h3>
        <%= link_to 'Log out', '/logout', {class: "nav_button", local: true}  %>
        <%= link_to 'Edit', '/edit', {class: "nav_button", local: true}  %>
        <%= link_to 'Write Blog', '/write', {class: "nav_button", local: true}  %>
      <% else %>
        <h3>Welcome, Stranger!</h3>
        <%= link_to "Sign up", '/signup', {class: "nav_button", local: true} %>
        <%= link_to "Sign in", '/signin', {class: "nav_button", local: true} %>
      <% end %>
    </nav>
    <article class="">
      <%= yield %>
    </article>
  </body>
</html>
